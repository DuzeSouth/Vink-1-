:root{
	--primary-color:rgb(11,78,179);
}
*,
*:: before,
*:: after{

	margin:0;
	padding:0;
	box-sizing:border-box;
}
/* GLobal stylings */
label{
	display:block;
	margin-bottom:0.5rem;
	}
input {
	display: block;
	width:100%;
	padding: 0.75rem;
	border:1px solid #ccc;
	border-radius:0.25rem;
	
}

form{
		
	font-family:Montserrat, "segoe UI", Tahoma, Geneva,Verdana, sans-serif;
	place-items:center;
	min-height:50%;
	width: clamp(320px,30%,430px);
	margin:0 auto;
	border: 1px solid #xxx;
	border-radius: 0.35rem;
	padding:1.5rem;
	background-color:#ccccccd4;
	margin-top:5%;
	float:center;
	position:relative;
}
.form-step{
	display:none;
}
.form-step-active{
	display:block;
}
.width-50 {
	width: 50%;

}
.text-center {
	text-align:center;
}
.ml-auto {
	margin-left: auto;
}

.input-group{
	margin: 0.5rem 0;
}
.btns-group{
	display: grid;
	grid-template-columns:repeat(2,1fr);
	gap:1.5rem;
}
.btn{
	padding:0.75rem;
	display:block;
	text-decoration:none;
	background-color:var(--primary-color);
	color:#f3f3f3;
	border-radius:0.25rem;
	cursor: pointer;
	transition: 0.3s;
	text-align:center;
}
.btn:hover{
	box-shadow:0 0 0 2px #fff,0 0 0 3px var(--primary-color); 
}
.header-cta-button{
	text-align: left;
	color:white;
	background-color:rgb(67,65,59);
	padding: 10px 20px;
	margin-bottom:25px;
	font-size:15px;
	transition: all 0.5s ease-in-out;
	text-decoration: none;
	border-radius:0.25rem;
	cursor:pointer;
	transition:0.3;
	margin-left:auto;
}
.header-cta-button:hover{
		background-color:rgb(203,0,55);
		text-transform:uppercase;
		
	}
.progressbar::before,.progress{
	content:"";
	position:absolute;
	top: 50%;
	transform:translateY(-50%);
	height:4px;
	width:100%;
	z-index:-1;
}
.progress-step-active{
	background-color:var(--primary-color);
	color:white;
}
.progress-step{
	width:2.1875rem;
	height: 2.1875rem;
	background-color:#dcdcdc;
	border-radius:50%;
	display:flex;
	justify-content:center;
	align-items:center;
}
.progress-step::before, .progress{
	counter-increment: step;
	content: counter(step);
}

.progress-step::after{
content: attr(data-title);
position:absolute;
top:calc(100% + 0.5rem);
font-size:0.85rem;
}
.progressbar {
	position: relative;
	display: flex;
	justify-content: space-between;
	counter-reset:step;
}
footer{
	padding-bottom:40px;
	padding-left:40px;
	padding-right:40px;
	padding-top:40px;
	text-align:center;
	font-size:22px;
	margin-top:100px;
}

